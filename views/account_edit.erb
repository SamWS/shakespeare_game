<div id="accountEdit">

<article id="editInputs">

  <form action="/user/<%= @current_user.id %>" method="post">
    <input type="hidden" name="_method" value="put">
    <label for="">name: </label>
    <input type="text" name="name" value="<%= @current_user.name %>">

    <label for="">email: </label>
    <input type="text" name="email" value="<%= @current_user.email %>">

    <label for="">password: </label>
    <input type="text" name="password" value="<%= @current_user.password %>">

    <button>update</button>
  </form>

 <div class="deleteInput">

   <form action="/user/<%= @current_user.id %>" method="post">
     <input type="hidden" name="_method" value="delete">
     <button class="deleteBtn">delete account</button>
   </form>

 </div>

</article>

</div>
